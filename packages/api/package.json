{
  "name": "api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "wrangler d1 migrations apply maronn-household --local",
    "db:migrate:prod": "wrangler d1 migrations apply maronn-household-production --remote",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push:sqlite",
    "db:check": "drizzle-kit check:sqlite"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.3",
    "hono": "^3.12.8"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "@cloudflare/workers-types": "^4.20240117.0",
    "drizzle-kit": "^0.20.11",
    "typescript": "^5.3.3",
    "ulidx": "^2.4.1",
    "vitest": "^3.2.4",
    "wrangler": "^3.24.0"
  }
}
